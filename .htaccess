RewriteEngine On # Turn on the rewriting engine
RewriteRule		^$						about.php 				[NC,L]
RewriteRule		^about$					about.php 				[NC,L]
RewriteRule		^your-information$		enterDetails.php 		[NC,L]
RewriteRule		^results$				results.php 			[NC,L]

RewriteRule		^about-(.*)$				about.php?id=$1			[NC,L]
RewriteRule		^your-information-(.*)$		enterDetails.php?id=$1 	[NC,L]
RewriteRule		^results-(.*)$				results.php?id=$1 		[NC,L]
